# Environment Variables Template for Walletrix

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/walletrix"

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching and sessions)
# =============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV="development"
API_PORT=3001
FRONTEND_URL="http://localhost:3000"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
BCRYPT_ROUNDS=12

# Encryption key for sensitive data (32 characters)
ENCRYPTION_KEY="your-32-character-encryption-key-123"

# =============================================================================
# BLOCKCHAIN RPC ENDPOINTS
# =============================================================================

# Ethereum
ETHEREUM_MAINNET_RPC="https://mainnet.infura.io/v3/your-project-id"
ETHEREUM_SEPOLIA_RPC="https://sepolia.infura.io/v3/your-project-id"
ETHEREUM_GOERLI_RPC="https://goerli.infura.io/v3/your-project-id"

# Alternative Ethereum providers
ALCHEMY_API_KEY="your-alchemy-api-key"
QUICKNODE_ENDPOINT="your-quicknode-endpoint"

# Bitcoin
BITCOIN_MAINNET_RPC="https://bitcoin-rpc-mainnet.com"
BITCOIN_TESTNET_RPC="https://bitcoin-rpc-testnet.com"

# Other blockchains
POLYGON_RPC="https://polygon-mainnet.infura.io/v3/your-project-id"
BSC_RPC="https://bsc-dataseed.binance.org"
AVALANCHE_RPC="https://api.avax.network/ext/bc/C/rpc"

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# Price data providers
COINGECKO_API_KEY="your-coingecko-api-key"
COINMARKETCAP_API_KEY="your-coinmarketcap-api-key"

# NFT metadata
OPENSEA_API_KEY="your-opensea-api-key"
MORALIS_API_KEY="your-moralis-api-key"

# Transaction history and analytics
ETHERSCAN_API_KEY="your-etherscan-api-key"
BLOCKCYPHER_API_KEY="your-blockcypher-api-key"

# =============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# =============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@walletrix.dev"

# =============================================================================
# PUSH NOTIFICATIONS (Optional)
# =============================================================================
FIREBASE_SERVER_KEY="your-firebase-server-key"
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL="info"  # error, warn, info, debug
LOG_FILE="logs/walletrix.log"

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
ENABLE_CORS=true
TRUST_PROXY=false

# =============================================================================
# PRODUCTION SETTINGS (Override in production)
# =============================================================================
# SSL_CERT_PATH="/path/to/cert.pem"
# SSL_KEY_PATH="/path/to/key.pem"
# SECURE_COOKIES=true