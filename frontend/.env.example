# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# Environment
NEXT_PUBLIC_ENV=development

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG_TOOLS=true
NEXT_PUBLIC_ENABLE_TRANSACTION_MONITORING=true
NEXT_PUBLIC_ENABLE_PRICE_REFRESH=true

# UI Configuration
NEXT_PUBLIC_DEFAULT_NETWORK=ethereum
NEXT_PUBLIC_DEFAULT_CURRENCY=USD
NEXT_PUBLIC_DEFAULT_THEME=dark

# Polling Intervals (milliseconds)
NEXT_PUBLIC_BALANCE_REFRESH_INTERVAL=30000
NEXT_PUBLIC_PRICE_REFRESH_INTERVAL=60000
NEXT_PUBLIC_TRANSACTION_STATUS_POLL_INTERVAL=5000

# External Links
NEXT_PUBLIC_DOCS_URL=https://docs.walletrix.com
NEXT_PUBLIC_SUPPORT_URL=https://support.walletrix.com

# Analytics (Optional)
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking (Optional)
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
